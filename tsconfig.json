{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": [
        "../src/*"
      ]
    },

    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}

